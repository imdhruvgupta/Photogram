<h1>New Post</h1>

<%= form_with scope: :post, url: posts_path, html: { multipart: true }, local: true do |form| %>
    <p>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
    </p>
    
    <p>
    <%= form.label :caption %><br>
    <%= form.text_field :caption %>
    </p>
    
    <p>
    <%= form.submit %>
    </p>
    
<% end %>
    